<div class="customer-page">
  <div class="container">
    <div class="customer-form-wrapper">
      <div class="customer-form-header">
        <h1>Create Account</h1>
        <p>Join ELOWRA and start your skincare journey</p>
      </div>

      {% form 'create_customer', class: 'customer-form' %}
        {% if form.errors %}
          <div class="form-errors">
            <h4>Please correct the following:</h4>
            <ul>
              {% for error in form.errors %}
                <li>{{ error | capitalize }}</li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        <div class="form-group">
          <label for="customer-first-name">First Name</label>
          <input 
            type="text" 
            id="customer-first-name" 
            name="customer[first_name]" 
            value="{{ form.first_name }}"
            autocomplete="given-name"
            required>
        </div>

        <div class="form-group">
          <label for="customer-last-name">Last Name</label>
          <input 
            type="text" 
            id="customer-last-name" 
            name="customer[last_name]" 
            value="{{ form.last_name }}"
            autocomplete="family-name"
            required>
        </div>

        <div class="form-group">
          <label for="customer-email">Email Address</label>
          <input 
            type="email" 
            id="customer-email" 
            name="customer[email]" 
            value="{{ form.email }}"
            autocomplete="email"
            required>
        </div>

        <div class="form-group">
          <label for="customer-password">Password</label>
          <input 
            type="password" 
            id="customer-password" 
            name="customer[password]"
            autocomplete="new-password"
            required>
          <small>Must be at least 8 characters</small>
        </div>

        <div class="form-group">
          <label class="checkbox-label">
            <input type="checkbox" name="customer[accepts_marketing]" value="1">
            <span>I'd like to receive skincare tips and exclusive offers via email</span>
          </label>
        </div>

        <button type="submit" class="btn btn-primary btn-large">Create Account</button>

        <div class="form-links">
          <p>By creating an account, you agree to our <a href="/pages/privacy-policy">Privacy Policy</a> and <a href="/pages/terms-of-service">Terms of Service</a>.</p>
        </div>
      {% endform %}

      <div class="form-divider">
        <span>Already have an account?</span>
      </div>

      <a href="{{ routes.account_login_url }}" class="btn btn-secondary btn-large">Sign In</a>
    </div>
  </div>
</div>