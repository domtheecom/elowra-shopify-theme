<div class="page-content">
  <div class="container">
    <div class="page-header">
      <h1 class="page-title">{{ page.title }}</h1>
    </div>
    
    <div class="page-body">
      {{ page.content }}
    </div>
  </div>
</div>

{% comment %} Special handling for specific pages {% endcomment %}
