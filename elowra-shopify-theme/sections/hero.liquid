<section class="hero-section">
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">
        {{ section.settings.title_line1 }}<br>
        <span class="sage-text">{{ section.settings.title_line2 }}</span>
      </h1>
      <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
      <div class="hero-buttons">
        {% if section.settings.button1_text != blank %}
          <a href="{{ section.settings.button1_link }}" class="btn btn-primary">
            {{ section.settings.button1_text }}
          </a>
        {% endif %}
        {% if section.settings.button2_text != blank %}
          <a href="{{ section.settings.button2_link }}" class="btn btn-secondary">
            {{ section.settings.button2_text }}
          </a>
        {% endif %}
      </div>
    </div>
    <div class="hero-image">
      {% if section.settings.image %}
        <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.image.alt | escape }}">
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title_line1",
      "label": "Title Line 1",
      "default": "Naturally Radiant."
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "Title Line 2",
      "default": "Powerfully Gentle."
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "The 3-step skincare ritual for sensitive, dry, and allergy-prone skin."
    },
    {
      "type": "text",
      "id": "button1_text",
      "label": "Button 1 Text",
      "default": "Subscribe Now"
    },
    {
      "type": "url",
      "id": "button1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button2_text",
      "label": "Button 2 Text",
      "default": "See What's Inside"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Button 2 Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}