<footer class="footer" role="contentinfo">
  <div class="footer-wrapper">
    <div class="footer-grid">
      <div class="footer-column">
        <h3>{{ section.settings.column1_title }}</h3>
        <div class="footer-content">{{ section.settings.column1_content }}</div>
      </div>
      
      <div class="footer-column">
        <h3>{{ section.settings.column2_title }}</h3>
        <ul class="footer-links">
          {% for block in section.blocks %}
            {% if block.type == 'link' %}
              <li><a href="{{ block.settings.url }}">{{ block.settings.text }}</a></li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      
      <div class="footer-column">
        <h3>{{ section.settings.column3_title }}</h3>
        <div class="footer-content">{{ section.settings.column3_content }}</div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "column1_title",
      "label": "Column 1 Title",
      "default": "About ELOWRA"
    },
    {
      "type": "richtext",
      "id": "column1_content",
      "label": "Column 1 Content",
      "default": "<p>Premium skincare for sensitive skin. Our 3-step ritual transforms your skin with gentle, effective formulations.</p>"
    },
    {
      "type": "text",
      "id": "column2_title",
      "label": "Column 2 Title",
      "default": "Quick Links"
    },
    {
      "type": "text",
      "id": "column3_title",
      "label": "Column 3 Title",
      "default": "Contact"
    },
    {
      "type": "textarea",
      "id": "column3_content",
      "label": "Column 3 Content",
      "default": "hello@elowra.com\n(555) 123-4567"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "link",
          "settings": {
            "text": "About",
            "url": "/pages/about"
          }
        },
        {
          "type": "link",
          "settings": {
            "text": "FAQ",
            "url": "/pages/faq"
          }
        },
        {
          "type": "link",
          "settings": {
            "text": "Contact",
            "url": "/pages/contact"
          }
        }
      ]
    }
  ]
}
{% endschema %}